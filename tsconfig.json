{
    "compilerOptions": {
        "module": "amd",
        "noImplicitAny": true,
        "sourceMap": true,
        "jsx": "react",
        "jsxFactory": "tsx",
        "target": "es5",
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "include": [
        "./app/*",
        "./docs/*",
        "./app/data/*",
        "./apps/data/flights/*",
        "./docs/data/*",
        "./docs/data/flights/*",
        "./docs/demos/flights/*",
    ],
    "exclude": [
        "node_modules"
    ]
}